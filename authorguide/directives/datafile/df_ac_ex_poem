.. activecode:: df_ac_ex_poem
   :author: bmiller
   :difficulty: 3.0
   :basecourse: authorguide
   :topic: directives/datafile
   :from_source: T
   :language: cpp
   :compileargs: ['-Wall', '-Wextra', '-pedantic', '-std=c++11']
   :datafile: poem.txt
   :enabledownload:

   #include <fstream>
   #include <iostream>

   int main () {
     std::ifstream is("poem.txt");
     char c;
     while (is.get(c)) {
       std::cout << c;
     }
     is.close();
     return 0;
   }
