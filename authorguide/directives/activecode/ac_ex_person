.. activecode:: ac_ex_person
   :author: bmiller
   :difficulty: 3.0
   :basecourse: authorguide
   :topic: directives/activecode
   :from_source: T
   :language: java
   :enabledownload:

   public class Person
   {
      private String name;

      public Person(String initialName)
      {
         name = initialName;
      }

      public String getName()
      {
         return name;
      }

      public boolean setName(String newName)
      {
         if (newName != null)
         {
            name = newName;
            return true;
         }
         return false;
      }

      public static void main(String[] args)
      {
         Person test = new Person("Alice");
         System.out.println(test.getName());
      }

   }

