   :basecourse: javareview
   :topic: ArrayBasics/ArrayPractice
   :from_source: None
   :language: java

   public class Test
   {

       public static int getSum(int[] arr)
       {
          int sum = 0;
          for (int value : arr)
          {
              sum = sum + value;
          }
          return sum;
       }

       public static void main(String[] args)
       {
           int[] a1 = {1, 2, 5, 3};
           System.out.println("It should print 11 " +
                              " and your answer is: " + getSum(a1));
       }
   }