   :topic: LoopBasics/LoopPractice
   :from_source: None
   :language: java

   public class Test1
   {
       public static void main(String[] args)
       {
           for (int x = 10; x >= 1; x--)
           {
               if (x % 2 == 0)
                   System.out.println(x + " is even");
               else
                   System.out.println(x + " is odd");
           }
       }
   }