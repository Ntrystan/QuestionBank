    def turtleLoop(jaz,mia):
        for x in range(20):
            jaz.forward(10)
            mia.forward(10)
            if (mia.xcor() - jaz.xcor() < 30):


    def turtleDraw(jaz, mia):
        jaz.shape('turtle')
        mia.shape('turtle')
        mia.color('red')
        mia.penup()
        mia.goto(100,0)
        mia.pendown()
        mia.right(180)
        turtleLoop(jaz,mia)

    from turtle import *
    space = Screen()
    jaz = Turtle()
    mia = Turtle()
    turtleDraw(jaz,mia)