   import turtle

   def drawSquare(t, sz):
      """Get turtle t to draw a square with sides sz long"""

      for i in range(4):
         t.forward(sz)
         t.left(90)

   wn = turtle.Screen()
   wn.bgcolor("lightgreen")

   alex = turtle.Turtle()
   alex.color("hotpink")
   alex.pensize(3)




   wn.exitonclick()