    class Account:
        '''Account class for representing and manipulating bank accounts'''

        def __init__(self):
            '''Create a new account with zero balance'''
            self.balance = 0.00

        def getBalance(self):
            return self.balance

        def deposit(self, amount):
            self.balance += amount

        def withdraw(self, amount):
            self.balance -= amount


    p = Account()
    print(p.getBalance())
    p.deposit(150)
    print(p.getBalance())
    p.withdraw(50)
    print(p.getBalance())