            Object[] args = {nums};

            // name of method, arguments are (nums, 30)
            String output = getMethodOutput("findMin", args);
            String expect = "5";

            boolean passed = getResults(expect, output,
                     "findMin({10, 20, 5, 40, 50})");
            assertTrue(passed);
         }
