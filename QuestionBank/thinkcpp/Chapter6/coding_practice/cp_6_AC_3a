   :from_source: T
   :language: cpp

   #include <iostream>
   using namespace std;

   int main() {
       int n = 1;
       while (n <= 100) {
           if (n % 3 == 0 && n % 5 == 0) {
               cout << "FizzBuzz" << endl;
           }
           else if (n % 3 == 0) {
               cout << "Fizz" << endl;
           }
           else if (n % 5 == 0) {
               cout << "Buzz" << endl;
           }
           else {
               cout << n << endl;
           }
           n++;
       }
   }