    def get_list_of_even_nums(list_of_ints):
        accum_lst = []
        for num in list_of_ints:
            if num % 2 == 0:
                accum_lst.append(num)
        return accum_lst

    # example invocations
    li = [2,5,7,4,10,12,3]

    print get_list_of_even_nums(li)

    print get_list_of_even_nums([3,3,7])