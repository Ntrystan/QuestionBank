    L1 = [1, 7, 4, -2, 3]

    def absolute(x):
        print "--- figuring out what to write on the post-it note for " + str(x)
        if x >= 0:
            return x
        else:
            return -x

    print "About to call sorted"
    L2 = sorted(L1, None, absolute)
    print "Finished execution of sorted"
    print L2