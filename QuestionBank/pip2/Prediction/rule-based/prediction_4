   def classify(s, rls):
       for (f, gender) in rls:
           if f(s):
               return gender
       return "male"

   rules = [(lambda x: x[-1] == 'e', "female"),
            (lambda x: x[-1] == 'a', "female"),
            (lambda x: x[-1] == 'i', "female")]
   print classify("Mark", rules)
   print classify("Julie", rules)