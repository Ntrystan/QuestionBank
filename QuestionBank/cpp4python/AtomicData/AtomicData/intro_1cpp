    :topic: AtomicData/AtomicData
    :from_source: T
    :caption: Basic Arithmetic Operators C++
    :language: cpp

    #include <iostream>
    #include <cmath>
    using namespace std;

    // Function that perfoms various math operations
    int main(){

        cout << (2+3*4) << endl;
        cout << (2+3)*4 << endl;
        cout << pow(2, 10) << endl;
        cout << float(6)/3 << endl;
        cout << float(7)/3 << endl;
        cout << 7/3 << endl; //In C++ this is integer division
        cout << 7%3 << endl;
        cout << float(3)/6 << endl;
        cout << 3/6 << endl;
        cout << 3%6 << endl;
        cout << pow(2, 100) << endl;

        return 0;
    }