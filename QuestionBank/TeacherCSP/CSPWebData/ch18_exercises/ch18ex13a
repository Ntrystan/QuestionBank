    def biggestLoss(file):
        maxLoss = 0
        lines = file.readlines()
        for line in lines:
            values = line.split(",")
            open = float(values[1])
            close = float(values[4])
            dailyLoss = open - close
            if (dailyLoss > maxLoss):
                maxLoss = dailyLoss
                date = values[0]
        print(date + " loss " + str(maxLoss))

    file = open("stocks.txt", "r")
    biggestLoss(file)