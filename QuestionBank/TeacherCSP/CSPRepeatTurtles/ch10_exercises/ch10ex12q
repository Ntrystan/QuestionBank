    from turtle import *
    from sys import *              # use the system library
    setExecutionLimit(50000)      # let this take up to 50 seconds
    space = Screen()
    t = x
    t.setheading(90)
    for repeats in range(x):
        t.color("blue")
        t.forward(10)
        t.left(18)
        for sides in range(x):
            t.color("green")
            t.forward(x)
            t.right(x)