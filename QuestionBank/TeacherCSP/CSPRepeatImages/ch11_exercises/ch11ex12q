    :nocodelens:

    from image import *
    # CREATE AN IMAGE FROM A FILE
    img = Image("vangogh.jpg")
    # LOOP THROUGH THE PIXELS
    for x in range(int(img.getWidth())):
        for y in range(int(img.getHeight())):
            # GET THE DATA
            p = img.getPixel(x, y)
            # SET THE PIXEL
            p.setRed(0)
            # UPDATE THE PIXEL
            img.updatePixel(p)
    # SHOW THE RESULT
    win = ImageWin(img.getWidth(),img.getHeight())
    img.draw(win)