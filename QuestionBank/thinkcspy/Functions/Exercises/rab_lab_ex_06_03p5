   from unittest.gui import TestCaseGui

   class myTests(TestCaseGui):
       def testOne(self):
           self.assertEqual(row_seat(1), (1, 1), "Tested ticket_number = 1, giving row 1 and seat 1")
           self.assertEqual(row_seat(800), (20, 40), "Tested ticket_number = 800, giving row 20 and seat 40")
           self.assertEqual(row_seat(356), (9, 36), "Tested ticket_number = 356, giving row 9 and seat 36")
           self.assertEqual(row_seat(199), (5, 39), "Tested ticket_number = 199, giving row 5 and seat 39")
           
          
   myTests().main()