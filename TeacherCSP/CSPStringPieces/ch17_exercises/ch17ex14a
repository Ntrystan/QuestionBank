    :nocodelens:

    def aProcedure(aString):
        aList = aString.split(",")
        agePart = aList[1]
        namePart = aList[0]

        posAge = agePart.find("age:")
        if (posAge > -1):
            age = agePart[posAge+5:len(agePart)]
        else:
            age = "Unknown"
        posName = namePart.find("name:")
        if (posName > -1):
            name = namePart[posName+6:len(namePart)]
        else:
            name = "Unknown"
        print(name + "," + age)

    aProcedure("name: Bob,age: 10")