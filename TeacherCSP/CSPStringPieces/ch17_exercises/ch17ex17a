    def tellAnimalStory(name, animal, animalName, description):

        line1 = "Once upon a time there was a girl named, " + name + "."
        line2 = "She had a " + description + " " + animal + " named " + animalName + "."
        print(line1)
        print(line2)

    tellAnimalStory("Barb","horse","Sport","handsome")