    def aProcedure(aString):
        pieces = aString.split(",")
        adj1 = pieces[0]
        adj2 = pieces[1]
        noun = pieces[2]
        verb = pieces[3]
        sentence = "The " + adj1 + " and " + adj2 + " " + noun + " " + verb + "."
        print(sentence)
    aProcedure("crazy,blue,banana,runs")