    def circleDraw(turt, num):
        turt.shape("turtle")
        turt.penup()
        for size in range(20):
            turt.forward(num)
            turt.stamp()
            turt.right(18)

    from turtle import *
    space = Screen()
    turt = Turtle()

    circleDraw(turt, 20)