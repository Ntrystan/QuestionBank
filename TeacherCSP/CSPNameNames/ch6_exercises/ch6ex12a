    def turtleDrawing(turtle, turtle2, distance, angle):
            turtle.left(angle)
            turtle2.right(angle)
            turtle.forward(distance)
            turtle2.forward(distance)

    from turtle import *
    space = Screen()
    t = Turtle()
    t2 = Turtle()
    turtleDrawing(t, t2, 100, 45)