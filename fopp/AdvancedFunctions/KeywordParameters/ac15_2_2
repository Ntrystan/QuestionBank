   # this works
   names = ["Jack","Jill","Mary"]
   for n in names:
       print("'{}!' she yelled. '{}! {}, {}!'".format(n,n,n,"say hello"))

   # but this also works!
   names = ["Jack","Jill","Mary"]
   for n in names:
       print("'{0}!' she yelled. '{0}! {0}, {1}!'".format(n,"say hello"))