    :basecourse: haugrud
    :topic: ClassesDiggingDeeper/Inheritance
    :from_source: None

    class Account:
        def __init__(self):
            self.balance = 0.00

        def getBalance(self):
            return self.balance

        def deposit(self, amount):
            self.balance += amount

        def withdraw(self, amount):
            if self.balance >= amount:
                self.balance -= amount

    class Savings(Account):
        '''Savings inherits everything from Account'''
        __rate = 0.01
        def __init__(self):
            self.__intPaid = 0.0
            Account.__init__(self)

        def accrue(self):
            '''calculate and deposit interest'''
            interest = Savings.__rate * self.balance
            self.__intPaid += interest
            self.deposit(interest)

    a = Savings()
    a.deposit(100)
    print(a.getBalance())
    a.accrue()
    print(a.getBalance())

