    :topic: ClassesDiggingDeeper/Inheritance
    :from_source: None

    class Account:
        def __init__(self):
            self.balance = 0.00

        def getBalance(self):
            return self.balance

        def deposit(self, amount):
            self.balance += amount

        def withdraw(self, amount):
            if self.balance >= amount:
                self.balance -= amount

    class LOC(Account):
        def __init__(self, line):
            self.__line = line
            Account.__init__(self)

    a = LOC(500)
    a.deposit(100)
    print(a.getBalance())
    a.withdraw(300)
    print(a.getBalance())
