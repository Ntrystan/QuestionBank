    :topic: ClassesDiggingDeeper/Polymorphism
    :from_source: None

    class CAD:
        """Canadian Dollar"""
        USD = 0.75   # the value of a CAD in terms of a USD
        def __init__(self, amt):
            self.__amt = amt

        def getAmt(self):
            return self.__amt

        def exchange(self):
            return self.__amt * CAD.USD

    class GBP:
        """Great Britain Pound"""
        USD = 0.75   # the value of a GBP in terms of a USD
        def __init__(self, amt):
            self.__amt = amt

        def getAmt(self):
            return self.__amt

        def exchange(self):
            return self.__amt * GBP.USD

    a = 100.0
    b = GBP(100)
    c = CAD(100)
    print(isinstance(a, float))
    print(isinstance(b, CAD))
    print(isinstance(c, CAD))
