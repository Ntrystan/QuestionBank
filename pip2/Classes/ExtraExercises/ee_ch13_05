   class Olympics():
       def __init__(self, country, medal):
           self.country = country
           self.medal = medal

       def sort_medal(self):
           return self.medal

       def sort_country(self):
           return self.country

   L = [("Italy", 28), ("China", 70), ("Australia", 29), ("United States", 121), ("Russia", 56), ("South Korea", 21), ("Venezuela", 3)]

