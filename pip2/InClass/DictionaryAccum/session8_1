    mystr = 'By a route obscure and lonely, haunted by ill angels only'
    str2 = "a brain train"

    ######Method 1: a list of counters ###########
    vcounts= [0,0,0,0,0]
    vowels = ['a', 'e', 'i', 'o', 'uu']
    for letter in str2:
        if letter in vowels:
            vcounts[vowels.index(letter)] += 1
    for vowel in vowels:
        print vowel + ": " + str(vcounts[vowels.index(vowel)])