    :caption: Drawing a Recursive Spiral using Turtles
    :language: cpp

    #include <CTurtle.hpp>
    namespace ct = cturtle;

    void spiral(ct::Turtle& turtle, int length) {
        if (len > 0) {
            rt.forward(length);
            rt.right(90);
            spiral(rt, len - 5);
        }
    }

    int main(int argc, char** argv) {
        ct::TurtleScreen screen;
        ct::Turtle turtle(scr);

        spiral(turtle, 100);

        scr.bye();
        return 0;
    }