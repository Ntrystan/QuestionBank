.. activecode::  gcd_cpp
    :author: bmiller
    :difficulty: 3
    :basecourse: cppds
    :topic: Introduction/ObjectOrientedProgrammingDefiningClasses
    :from_source: T
    :language: cpp
    :caption: The Greatest Common Divisor Function

    #include <iostream>
    using namespace std;

    int gcd(int m, int n) {
        while (m%n != 0) {
            int oldm = m;
            int oldn = n;

            m = oldn;
            n = oldm%oldn;
        }

        return n;
    }

    int main() {
        cout << gcd(20, 10) << endl;
        return 0;
    }