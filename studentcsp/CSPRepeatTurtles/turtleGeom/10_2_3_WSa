   # DEFINE THE PROCEDURE
   def polygon(turtle, sides):
       degree = 360 / sides
       for side in range(sides):
           mia.forward(40)
           mia.right(degree)

   # CREATE THE TURTLE WORLD
   from turtle import *
   space = Screen()
   mia = Turtle()
   mia.setheading(90)

   # CALL THE PROCEDURE
   polygon(mia,5)