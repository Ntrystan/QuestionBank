   #include <iostream>
   using namespace std;

   void printAddTable(int n) {
       int row = 0;
       while (row <= n) {
           int col = 0;
           while (col <= n) {
               cout << row + col << '\t';
               col++;
           }
           cout << endl;
           row++;
       }
   }

   int main() {
       printAddTable (10);
   }