   :language: cpp

   #include <iostream>
   #include <string>
   #include <vector>
   using namespace std;

   int convertToInt (const string& s) {
      string digitString = "";

      for (size_t i = 0; i < s.length(); i++) {
         if (isdigit (s[i])) {
            digitString += s[i];
         }
      }
      return atoi (digitString.c_str());
   }

   int main() {
      int num = convertToInt("867-5309");
      cout << num << endl;
   }
